<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleVenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_detalle_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arturo Borja"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/txt_detalle_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09/10/2019"
            android:textSize="18dp"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/txt_detalle_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S/. 456.00"
            android:textSize="18dp"
            />

        <ListView
            android:id="@+id/lv_detalle_detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>